<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:theme="@style/RippleStyle"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="1dp"
    app:cardBackgroundColor="?attr/card_background"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sumitkolhe.bitsplash.utils.views.HeaderView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_margin="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:padding="@dimen/content_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/content_margin"
                android:paddingEnd="@dimen/content_margin"
                android:textColor="#FFFFFF"
                android:shadowColor="#66000000"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="5"
                android:textSize="@dimen/text_title"
                android:maxLines="4"
                android:ellipsize="end"
                android:letterSpacing="0.10"
                fontPath="fonts/splash.ttf"/>

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#DDFFFFFF"
                android:shadowColor="#66000000"
                android:shadowDx="0"
                android:shadowDy="4"
                android:paddingLeft="2dp"
                android:shadowRadius="5"
                android:textSize="@dimen/text_content_subtitle"
                android:maxLines="1"
                android:ellipsize="end"
                fontPath="fonts/Font-Bold.ttf"/>
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>